{% extends "base.j2" %}
{% block content %}
<div class="header">
    <img class="header-img" src="logo.png">
</div>
<div class="container pure-g">
    <div class="caption pure-u-1-4">
        <h1 class="headline">PROJECTS</h1>
    </div>
    <div class="content pure-u-3-4 pure-g">
        {% for project in projects%}
        <h1>{{ project["title"] }} <span class="game">{{  project["category"] }}</span> <span class="year">{{ project["year"] }}</span></h1>

        <div class="project-body pure-u-3-4">
            <p>{{ project["description"] }}</p>

            {% if project["downloads"] %}
            <i class="fas fa-file-download"></i>
            {% for download in project["downloads"] %}
                <a href="{{ download["url"] }}"> {{ download["name"] }}</a>
            {% endfor %}
            {% endif %}
            
            {% if project["links"] %}
            <i class="fas fa-link"></i>
            {% for link in project["links"] %}
                <a href="{{ link["url"] }}"> {{ link["name"] }}</a>
            {% endfor %}
            {% endif %}
        </div>

        {% endfor %}
    </div>
</div>
{% endblock %}
